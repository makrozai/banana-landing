mixin newsletter(title, input, description, textButton,linkButton)
  section#newsletter.scrollspy.u-bg-first.u-padding-top--l.u-padding-bottom--xxl.u-diagonal
    .container.white-text
      .row
        .col.s12
          h2.c-header__title= title
          if description
            p= description
      if input
        form.row
          .input-field.col.s12.m6.c-newsletter
            input(type="text")#newsletterInput
            label(for="newsletterInput") Ingresa tu correo electr√≥nico
          .col.s12
            button.c-button= textButton
      else
        .col.s12
            a(href= linkButton).c-button.u-margin-top--m= textButton
