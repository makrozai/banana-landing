mixin rowBillOrder(billOrder)
  tr
    td
      p= 'ID: ' + billOrder.id
      p= billOrder.date
    td
      b= billOrder.name
      p= billOrder.description
      .right-align.hide-on-med-and-up
        p.c-price= billOrder.price.dolar
          span.c-price__cents= billOrder.price.cent
        a(href="order-detail.html") ver detalle
    td.hide-on-small-and-down
      p.c-price= billOrder.price.dolar
        span.c-price__cents= billOrder.price.cent
    td.hide-on-small-and-down
      a(href="order-detail.html") ver<br>detalle
